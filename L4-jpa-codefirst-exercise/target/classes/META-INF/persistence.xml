<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="gringotts">  <!-- Change the name for every task-->
        <properties>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/gringotts?createDatabaseIfNotExist=true"/> <!-- Change the name of DB for every task-->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
           <property name="hibernate.connection.username" value="root"/>    <!-- Enter user for your local DB: root by default-->
            <property name="hibernate.connection.password" value="@Boris1@"/>  <!-- Enter your password for your local DB -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
